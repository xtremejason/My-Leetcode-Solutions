/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode *head) {
        unordered_map<ListNode*, int> Map;
        
        while(head){
            if(Map[head])
                return true;
            
            Map[head]++;
            head = head->next;
        }
        
        return false;
    }
};

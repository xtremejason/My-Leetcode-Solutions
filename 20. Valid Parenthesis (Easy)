#include <map>

class Solution {
    map<char,char> hMap;
    
    
public:
    bool isValid(string s) {
        stack<char> stk;
        for(auto c : s){
            switch(c){
                case '{':  
                    stk.push('}'); 
                    break;
                case '[':  
                    stk.push(']'); 
                    break;
                case '(':  
                    stk.push(')'); 
                    break;
                default:
                    if(stk.empty() || c != stk.top()) 
                        return false;
                    else stk.pop();
            }
        }
        return stk.size() == 0;
    }
};
